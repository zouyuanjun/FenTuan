<com.lejiaokeji.fentuan.view.helpview.StickyNavLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:id="@id/id_stickynavlayout_topview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitefff"
        android:orientation="vertical">
        <com.youth.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imb_jd_zhuanglian"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/home_bt_jd"/>
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imb_pdd_zhuanglian"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/home_bt_pdd"/>
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imb_daiding_zhuanglian"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/imb_daiding2_zhuanglian"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"/>
                />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:background="@drawable/home_bg_jd"
            android:id="@+id/rl_jd_selcet">
            <TextView
                android:id="@+id/tv_select_jd"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="38dp"
                android:textSize="15sp"
                android:text="京东"
                android:textColor="@color/hei3333"
                android:gravity="center"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <ImageView
                android:id="@+id/img_select_jd"
                android:background="@drawable/list_ic_underline"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="70dp"
                android:layout_below="@+id/tv_select_jd"
                android:layout_width="40dp"
                android:layout_height="4dp" />
            <TextView
                android:id="@+id/tv_select_pingduoduo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="48dp"
                android:textSize="15sp"
                android:text="拼多多"
                android:textColor="@color/hui88888"
                android:gravity="center"
                android:layout_height="30dp"
                android:layout_width="100dp"
              />
            <ImageView
                android:visibility="gone"
                android:id="@+id/img_select_pdd"
                android:background="@drawable/list_ic_underline"
                android:layout_below="@+id/tv_select_pingduoduo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="75dp"
                android:layout_width="40dp"
                android:layout_height="4dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="8dp">

        </LinearLayout>
        <LinearLayout
            android:background="@drawable/shape_corner_f2f2f2"
            android:layout_width="330dp"
            android:layout_height="39dp"
            android:orientation="horizontal"
            android:layout_gravity="center"
           android:paddingLeft="19dp"
            >
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@color/colorAccent"/>
                <EditText
                    android:id="@+id/ed_home_search"
                    android:paddingLeft="5dp"
                    android:background="@color/transparent"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:hint="请输入搜索关键词"/>
                <Button
                    android:background="@drawable/shape_corner_sousuo"
                    android:layout_gravity="center_vertical"
                    android:layout_width="60dp"
                    android:textColor="@color/whitefff"
                    android:textSize="15sp"
                    android:layout_height="wrap_content"
                    android:text="搜索"/>
        </LinearLayout>
    </LinearLayout>

    <com.lejiaokeji.fentuan.view.helpview.SimpleViewPagerIndicator
        android:id="@id/id_stickynavlayout_indicator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffff"
        android:orientation="vertical">
    </com.lejiaokeji.fentuan.view.helpview.SimpleViewPagerIndicator>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/whitefff"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <com.lejiaokeji.fentuan.view.helpview.ColorTrackTabLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/mytablayout"
                android:layout_weight="1"

                app:tabSelectedTextColor="#ff2d55"
                app:tabTextColor="@color/blackfont0000"
                app:tabIndicatorColor="#ff2d55"
               />

            <TextView
                android:background="@color/whitefff"
                android:id="@+id/tv_recomment"
                android:focusable="true"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/blackfont0000"
                android:text="  推 荐 |"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/im_hide"
            android:layout_gravity="center_vertical"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/home_ic_more"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
      android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <LinearLayout
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:background="@color/hui9999"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/textView2">
            </LinearLayout>
            <TextView
                android:id="@+id/textView2"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="分类"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:textSize="16sp"
                android:textColor="#666666"/>
            <LinearLayout
                android:layout_toRightOf="@+id/textView2"
                android:paddingLeft="10dp"
                android:layout_width="135dp"
                android:layout_height="1dp"
                android:background="@color/hui9999"
                android:layout_centerVertical="true">
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type_3"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:text="内衣配饰"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type_4"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:text="母婴玩具"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type_5"
                android:gravity="center"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:text="美妆个护"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type_11"
                android:gravity="center"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:text="数码家电"/>
            <LinearLayout
                android:layout_width="12dp"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:id="@+id/tv_type_6"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:layout_height="wrap_content"
                android:text="食品保健"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:id="@+id/tv_type_7"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="居家生活"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:id="@+id/tv_type_8"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="鞋品箱包"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:id="@+id/tv_type_9"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="运动户外"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
            <TextView
                android:textColor="#ff3c64"
                android:background="@drawable/shape_corner_fenleiff3c64"
                android:id="@+id/tv_type_10"
                android:layout_width="10dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="文体车品"/>
            <LinearLayout
                android:layout_width="6dp"
                android:layout_height="match_parent">
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@id/id_stickynavlayout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    </android.support.v4.view.ViewPager>

</com.lejiaokeji.fentuan.view.helpview.StickyNavLayout>